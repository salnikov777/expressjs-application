<h1>Add new course</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Text a title"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" min="1" required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="Text a price"></span>
    </div>
    <div class="input-field">
        <input value="https://cdn.kwork.ru/files/avatar/large/21/1903429-2.jpg" name="img" id="price" type="text" class="validate" required>
        <label for="price">URL image</label>
        <span class="helper-text" data-error="Text an Image URL"></span>
    </div>
    <button class="btn btn-primary">Add course</button>
</form>