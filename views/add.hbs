<h1>Add new course</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}


<form action="/add" method="post" novalidate>
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Text a title"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" min="1" required value="{{data.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Text a price"></span>
    </div>
    <div class="input-field">
        <input  name="img" id="price" type="text"
               class="validate" required value="{{data.img}}">
        <label for="price">URL image</label>
        <span class="helper-text" data-error="Text an Image URL"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Add course</button>
</form>